<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>User Register</title>
  </head>
  <body>
    <h1 class="text-center mt-5 mb-3">User Register</h1>
    <div class="container w-25">
      <%if(typeof errs != 'undefined'){%>
        <div class="alert alert-dismissible alert-danger">
           <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
           <%=errs%>
         </div>
         <%}%>

         <%if(sucess  && sucess != ''){%>
          <div class="alert alert-success alert-dismissible">
            <%=sucess%>
           </div>
           <%}else if(err && err != ''){%>
             <div class="alert alert-danger alert-dismissible ">
                <%=err%>
             <%}%>

      <form action="/signup" method="POST">

        <div class="form-group mb-3">
          <input type="text" name="name" class="form-control" placeholder="Name" value="<%= typeof registername != 'undefined' ? registername  : ''%>" autocomplete="off">
        </div>
  
        <div class="form-group mb-3">
          <input type="email" name="email" class="form-control" placeholder="Email Address" value="<%= typeof username != 'undefined' ?  username : ''%>" autocomplete="off">
          </div>
  
          <div class="form-group mb-3">
            <input type="password" name="password" class="form-control" placeholder="Password" placeholder="Email Address" value="<%= typeof username != 'undefined' ?  password : ''%>" autocomplete="off">
          </div>
  
        
  
          <button type="submit" class="form-control btn  btn-danger rounded submit mt-3">Register</button>
      </form>
      <p class="text-center my-2"><b>OR</b></p>
      <a href="/login" class="text-danger">Back to Login</a>


      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
  </div>
  </body>
</html>